<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sparksys.common.dao.GoodsDao">

    <select id="findAll"  resultType="com.sparksys.common.entity.Goods">
        select
        *
        from tb_product
        order by id desc
    </select>

    <select id="findByName" parameterType="map" resultType="com.sparksys.common.entity.Goods">
        select
        id,
        cate_id as cateId,
        pro_no as proNo,
        name as name,
        color as color,
        image_url as imageUrl,
        buy_prize as buyPrize,
        sale_prize as salePrize
        from tb_product
        where 1=1
        <if test="name != null and name !=''">
            and name LIKE "%"#{name}"%"
        </if>

        order by id desc
    </select>

    <select id="findVegetablesCount" parameterType="map" resultType="int">
        select
        count(1)
        from tb_product
        where 1=1
        <if test="name != null and name !=''">
            and name LIKE "%"#{name}"%"
        </if>
    </select>

    <insert id="saveGoods" parameterType="com.sparksys.common.entity.Goods">
        insert into tb_product
        (
        name,
        prize)
        values (
         #{name},
        #{prize})
    </insert>


    <select id="findById" parameterType="int" resultType="com.sparksys.common.entity.Goods">
        select
        *
        from tb_product
        where id=#{id}
    </select>

    <update id="updateGoods" parameterType="com.sparksys.common.entity.Goods">
        update tb_product
        set name = #{name,jdbcType=VARCHAR},
        prize = #{prize}
        where id = #{id}
    </update>

    <update id="deleteGoods" parameterType="int">
       delete from tb_product
        where id = #{id}
    </update>

</mapper>